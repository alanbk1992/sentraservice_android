<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUnit"
        android:src="@drawable/edc"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        app:civ_border_color="@color/color_white"
        app:civ_border_width="0.5dp"
        />

    <LinearLayout
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Merchant"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/tvMerchant"
                android:text="Merchant"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDesc1Name"
                android:text="Desc1"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/tvDesc1"
                android:text="Desc1"
                android:textSize="14dp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDesc2Name"
                android:text="Desc2"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/tvDesc2"
                android:text="Desc2"
                android:textSize="14dp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lrJobType"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Type"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/tvJobType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JobType"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lrReason"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Reason"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/tvReason"
                android:text="Reason"
                android:textSize="14dp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>