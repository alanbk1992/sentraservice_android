<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.ams.InstallationUnit">

    <RelativeLayout
        android:gravity="center"
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="Installation Unit"
            android:textColor="@color/color_white"
            android:padding="12dp"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_margin="4dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_close"
            android:tint="@color/color_white"
            style="@style/btn_red"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="btnClose_click"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:background="@color/color_background"
        android:paddingBottom="10dp">

        <ListView
            android:id="@+id/lvInstallationUnit"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="55dp"
            android:divider="@color/color_divider"
            android:dividerHeight="0.3dp">

        </ListView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnScan"
                    style="@style/btn_default"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:onClick="btnScanInstallation_click"
                    android:text="SCAN"
                    android:textSize="14dp">

                </Button>

                <Button
                    android:id="@+id/btnSubmit"
                    style="@style/btn_default"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:onClick="btnSubmitInstallation_click"
                    android:text="SUBMIT"
                    android:textSize="14dp">

                </Button>

                <Button
                    android:id="@+id/btnInstalledAll"
                    android:text="INSTALLED ALL"
                    android:layout_margin="5dp"
                    android:onClick="btnInstalledAll_click"
                    style="@style/btn_blue_01"
                    android:textSize="14dp"
                    android:layout_width="120dp"
                    android:layout_height="40dp">

                </Button>

            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>