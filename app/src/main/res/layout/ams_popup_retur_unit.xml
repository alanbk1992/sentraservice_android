<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/AppTheme"
    android:background="@color/color_white"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_close"
            android:onClick="btnScanCancel_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/edc"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>

        <TextView
            android:id="@+id/tvScanMerchant"
            android:text="Merchant"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:id="@+id/tvScanSN"
            android:text="S/N"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:id="@+id/tvScanStatus"
            android:text="Status"
            android:layout_gravity="center"
            android:textColor="@color/blue_01"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:id="@+id/tvReturType"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:textColor="@color/colorPrimary"
            style="@style/lv_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/color_gray"
            android:onClick="tvReturType_Click"
            android:hint="Choose Type" />

        <TextView
            android:id="@+id/tvReturDependence"
            android:textSize="14dp"
            android:textColor="@color/colorPrimary"
            style="@style/lv_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/color_gray"
            android:onClick="tvReturDependence_Click"
            android:hint="Choose Dependence" />

        <TextView
            android:id="@+id/tvReturReason"
            android:textSize="14dp"
            android:textColor="@color/colorPrimary"
            style="@style/lv_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/color_gray"
            android:onClick="tvReturReason_Click"
            android:hint="Choose Reason" />

    </LinearLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnScan"
                android:text="CANCEL"
                android:layout_margin="5dp"
                android:onClick="btnScanCancel_click"
                style="@style/btn_default"
                android:textSize="14dp"
                android:layout_width="120dp"
                android:layout_height="40dp">

            </Button>

            <Button
                android:id="@+id/btnScanOk"
                android:text="OK"
                android:layout_margin="5dp"
                android:onClick="btnScanOk_click"
                style="@style/btn_default"
                android:textSize="14dp"
                android:layout_width="120dp"
                android:layout_height="40dp">

            </Button>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>